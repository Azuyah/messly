{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "messly",
  "version": "0.1.0",
  "identifier": "io.messly.desktop",
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Messly",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "url": "https://www.messenger.com"
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}